<Button>
    font_size: 32
    size_hint: (0.3, 0.3)

<MyLayout>

    FloatLayout:
        size: root.width, root.height

        Button:
            text: "Top Left"
            # {"x","y","top","bottom","left","right"}　で指定する。
            pos_hint: {"x":0, "top":1}
        Button:
            text: "Top Right"
            pos_hint: {"x":0.7, "top":1}
            # x軸を70％のところに置く。まずボタンの大きさを30％に<Button>で指定しているから。
        Button:
            text: "Center"
            pos_hint: {"x":0.35, "y":0.35}
        Button:
            text: "Bottom Left"
            pos_hint: {"x":0, "Bottom":0}
        Button:
            text: "Bottom Right"
            pos_hint: {"x":0.7, "Bottom":0}